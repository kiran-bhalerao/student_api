{{#each errors }}
<div class="alert alert-primary">{{text}}</div>
{{else}}
<div class="alert alert-primary">Enter all information</div>
{{/each}}
<form action="/students/{{id}}?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" placeholder="Enter Name" value={{name}}>
  </div>
   <div class="form-group">
    <label for="age">Age</label>
    <input type="number" class="form-control" name="age" placeholder="Enter Age" value={{age}}>
  </div>
   {{#each language}}
   <div class="form-group">
    <label for="language">Language</label>
    <input type="text" class="form-control" name="language" placeholder="Enter Language" value={{title}}>
  </div>
  {{/each}}
  <button type="submit" class="btn btn-success">Submit</button>
  {{!-- <a type="reset" class="btn btn-primary">Discart</a> --}}
  <a href="/students" class="btn btn-success">Discart</a> 
</form>